import java.util.Scanner;

class SumDigits {
    static int sumDigits(int n) {
        if (n == 0) return 0;
        return n + sumDigits(n - 1);
    }

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int n = sc.nextInt();
        sc.close();
        int result = sumDigits(n);
        System.out.println(result);
    }
}
